generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  PATIENT
  CLINIC
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String?  @unique
  image     String?
  role      Role     @default(PATIENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  emailVerified DateTime?
  // Relationships
  clinic     Clinic?         // if the user is a clinic
  appointments Appointment[] // if the user is a patient

  accounts   Account[]
  sessions   Session[]
}

model Clinic {
  id        String   @id @default(cuid())
  name      String
  location  String
  phone     String?
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  doctors   DoctorVisit[]
}

model Doctor {
  id          String   @id @default(cuid())
  name        String
  specialization String
  qualifications String?
  experience   Int      // in years
  contact      String?

  visits       DoctorVisit[]
}

model DoctorVisit {
  id         String   @id @default(cuid())
  doctorId   String
  clinicId   String
  dayOfWeek  Int      // 0 (Sunday) to 6 (Saturday)
  startTime  String   // "09:00", stored as text
  endTime    String   // "12:00"

  doctor     Doctor   @relation(fields: [doctorId], references: [id])
  clinic     Clinic   @relation(fields: [clinicId], references: [id])
  appointments Appointment[]
}

model Appointment {
  id             String   @id @default(cuid())
  patientId      String
  doctorVisitId  String
  date           DateTime
  time           String // "10:00" etc.
  status         AppointmentStatus @default(BOOKED)

  patient        User      @relation(fields: [patientId], references: [id])
  doctorVisit    DoctorVisit @relation(fields: [doctorVisitId], references: [id])

  createdAt      DateTime @default(now())
}

enum AppointmentStatus {
  BOOKED
  CANCELLED
  COMPLETED
}
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? 
  access_token       String? 
  expires_at         Int? 
  token_type         String? 
  scope              String? 
  id_token           String? 
  session_state      String? 

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}