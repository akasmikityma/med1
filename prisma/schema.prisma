generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(cuid())
  name          String?
  email         String?       @unique
  image         String?
  role          Role          @default(PATIENT)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  emailVerified DateTime?
  accounts      Account[]
  appointments  Appointment[]
  clinic        Clinic?
  sessions      Session[]
}

model Clinic {
  id       String        @id @default(cuid())
  name     String
  location String
  phone    String?
  userId   String        @unique
  user     User          @relation(fields: [userId], references: [id])
  doctors  DoctorVisit[]
}

model Doctor {
  id             String        @id @default(cuid())
  name           String
  specialization String
  qualifications String?
  experience     Int
  contact        String?
  visits         DoctorVisit[]
}

model DoctorVisit {
  id           String        @id @default(cuid())
  doctorId     String
  clinicId     String
  dayOfWeek    Int
  startTime    String
  endTime      String
  appointments Appointment[]
  clinic       Clinic        @relation(fields: [clinicId], references: [id])
  doctor       Doctor        @relation(fields: [doctorId], references: [id])

  @@index([clinicId])
  @@index([startTime])
  @@index([endTime])
}

model Appointment {
  id            String            @id @default(cuid())
  patientId     String
  doctorVisitId String
  date          DateTime
  time          String
  status        AppointmentStatus @default(BOOKED)
  createdAt     DateTime          @default(now())
  doctorVisit   DoctorVisit       @relation(fields: [doctorVisitId], references: [id])
  patient       User              @relation(fields: [patientId], references: [id])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  PATIENT
  CLINIC
  ADMIN
}

enum AppointmentStatus {
  BOOKED
  CANCELLED
  COMPLETED
}
